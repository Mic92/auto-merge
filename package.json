{
  "name": "auto-merge",
  "version": "0.0.0",
  "private": true,
  "description": "A GitHub action that will automatically approve and merge pull requests based on configurable rules.",
  "scripts": {
    "build": "rm -rf dist && ncc build ./src/index.ts -o dist --license licenses.txt",
    "watch": "ncc build ./src/index.ts -o dist --watch",
    "prettier": "prettier --write .",
    "lint": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mic92/auto-merge.git"
  },
  "author": "Joerg Thalheim <joerg@thalheim.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mic92/auto-merge/issues"
  },
  "homepage": "https://github.com/Mic92/auto-merge#readme",
  "devDependencies": {
    "@actions/core": "^2.0.0",
    "@actions/github": "^9.0.0",
    "@octokit/graphql": "^9.0.1",
    "@octokit/plugin-throttling": "^11.0.1",
    "@octokit/webhooks": "^14.0.0",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/node": "^25.0.0",
    "@vercel/ncc": "^0.38.1",
    "prettier": "^3.2.5",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3"
  }
}
